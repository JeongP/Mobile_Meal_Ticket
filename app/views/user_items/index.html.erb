<section>
  <div class="container">
    <div class="tab-product-content">
      <div class="row first">
        <% @user_items.each do |i|%>
        <div class="col-md-4 item-loadmore">
          <div class="imagebox style1">
            <div class="imagebox-header">
              <%= i.status_to_span %>
              <%= image_tag i.image.url %>
              <div class="add-cart">
                <a href="#" class="shop-cart" title=""><span class="icon_cart_alt"></span></a>
                <% if user_signed_in? and UserItem.find_by(user_id: current_user.id, item_id: i.id).present? %>
                  <%= link_to user_item_path(i.id), class: "like", method: :delete do %>
                    <span class="icon_heart"></span>
                  <% end %>
                <% else %>
                  <%= link_to user_items_path(item_id: i.id), class: "like", method: :post, data: {confirm: "위시리스트에 추가되었습니다."} do %>
                    <span class="icon_heart_alt"></span>
                  <% end %>
                <% end %>
              </div>
              <div class="view center">
                <%= link_to 'QUICK VIEW', item_path(i.id), class: "bg-black color-white" %>
               <!--  <a href="#" class= title="">QUICK VIEW</a> -->
              </div>
            </div>
            <!-- /.imagebox-header -->
            <div class="imagebox-content center">
              <div class="name">
                <%= link_to "#{i.name}", item_path(i.id)%>
              </div>
              <div class="price">
                <%= i.price %>
              </div>
            </div>
            <!-- /.imagebox-content -->
          </div>
          <!-- /.imagebox style1 -->
        </div>
        <% end %>
        <!-- /.col-md-4 item-loadmore -->
        <div class="col-md-12">
          <div class="btn-loadmore center">
            <a href="#" class="base bg-black color-white center" title="">LOADMORE</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>